{% block body %}

    <div class="container mt-3">
        {% for flash_message in app.session.flashBag.get('notice') %}
            <div class="alert alert-success">
                <strong>{{ flash_message }}!!!</strong> A product has been added to the list.!!!
            </div>
        {% endfor %}
        {% for flash_message in app.session.flashBag.get('error') %}
            <div class="alert alert-danger">
                <strong>{{ flash_message }}!!!</strong> A product has been removed from the list.!!!
            </div>
        {% endfor %}</div>

    <footer id="footer" class="bg text-black py-5" style="background: white">
        <div class="container">
            <div class="row">

                <div class="col-lg-2 col-12">
                    <h4 class="font-rubik font-size-20"><a href="#" class="text-info" style="color: red; text-decoration: none;  font-weight: bold">Liên Hệ</a></h4>
                    <div class="d-flex flex-column flex-wrap">
                        <a href="#" class="font-rale font-size-14 text-black-50 pb-1">Chăm Sóc Khách Hàng</a>
                    </div>
                    <div class="d-flex flex-column flex-wrap">
                        <a href="#" class="font-rale font-size-14 text-black-50 pb-1">Địa Chỉ Liên Hệ</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
